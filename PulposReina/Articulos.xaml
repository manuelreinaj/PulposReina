<UserControl x:Class="PulposReina.Articulos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PulposReina"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="mainGrid">
        <DataGrid x:Name="DataArticulos" Margin="62,39,62,99"  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" />
                <DataGridTextColumn Header="Mascara" Binding="{Binding Mascaras}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="ButtonBack" Content="" HorizontalAlignment="Left" Height="31" Margin="62,409,0,0" VerticalAlignment="Top" Width="71" Click="Button_Back">
            <Button.Background>
                <ImageBrush ImageSource="/flechaizquierda.png"/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
